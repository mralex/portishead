<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %> <%= APP_CONFIG["name"] %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag "jquery.min", "jquery-ui.min", "rails", :defaults %>

  <%= csrf_meta_tag %>
  <%= yield(:head) %>
</head>
<body>


	<div id="header" class="container_12">
		<div class="grid_2">
			<h1><a href="/"><%= APP_CONFIG["name"] %></a></h1>
		</div>
		<div id="subhead" class="grid_10">
			<h5><em>Design <strong>&amp;</strong> development portfolio</em></h5>
			<div id="pages">
				<a href="/about">About</a>
				&nbsp;&nbsp;&nbsp;&nbsp;
				<a href="/contact">Contact</a>
			</div>
		</div>
	<% if current_user %>
		<div id="nav">
				<%= link_to current_user.name, current_user %>:
				<%= link_to "Sign out", logout_path %> |
				<%= link_to "Edit User", edit_user_path(current_user) %> |
				<%= link_to "Dashboard", dashboard_index_path %>
			<%= yield(:nav) %>
		</div>
	<% end%>
		<div class="clear"></div>	
	</div>

<div class="container_12">
	<% flash.each do |name, msg| %>
		<%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>
	
	<%= yield %>
</div>

</body>
</html>
