<% title @project.name %>


<% if current_user %>
	<% content_for :nav do %>
		| <strong><%= link_to 'Edit Project', edit_project_path(@project) %></strong>
	<% end %>
<% end %>

<div class="grid_4">
	<div id="project_info">
		<h1><%= @project.name %></h1>
		<div id="description">
		  <%= @project.description.html_safe %>
		</div>
		<div id="links">
			<ul>
				<% @project.links.each do |link| %>
					<li><%= link_to link.title, link.url %></li>
				<% end%>
			</ul>
		</div>
		<div id="worked">
		  <%= @project.worked_on.strftime("%Y") %>
		</div>
		<div id="category">
		  <%= @project.category.name %>
		</div>
	</div>
</div>
<div class="grid_8" id="project_images">
	<ul id="images" class="<% if current_user %>admin<% end %>">
	<% @images.each do |image| %>
		<li id="image_<%= image.id %>"><img width="100%" src="<%= image.image.url %>"/></li>
	<% end %>
	</ul>
</div>

<script type="text/javascript" charset="utf-8">
$(function(){
	$('#images.admin').sortable({
		dropOnEmpty: false,
		items: 'li',
		opacity: '0.5',
		scroll: true,
		placeholder: "image_placeholder",
		update: function(e) {
			$.ajax({
				type: 'post',
				data: $('#images.admin').sortable('serialize'),
				datatype: 'script',
				complete: function(request) {
					$('#images.admin').effect('highlight');
				},url: '<%= sort_project_images_path @project %>'
			});
		}
	});
});
</script>
