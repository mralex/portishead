<div id="project">
	<div class="grid_12">
		<h1><%= @project.name %></h1>
	</div>
	<div class="grid_9">
		<div  id="project_info">
			<div id="description">
			  <%= @project.description.html_safe %>
			</div>
			<!-- <div id="worked">
			  <em><%= @project.client.name %></em><br/>
			  <%= @project.worked_on.strftime("%Y") %>
			</div> -->
		</div>
		<div id="image_view">
			<ul>
				<% @images.each do |image| %>
					<li id="image_<%= image.id %>" data-id="<%= image.id %>">
						<a href="<%= image.image.url %>"><img src="<%= image.image.display.url %>"/></a>
					</li>
				<% end %>
			</ul>
			<% if @images.length > 1 %>
			<div id="image_view_nav">
				<a class="prev" href="#"><span>Previous</span></a>
				<a class="next" href="#"><span>Next</span></a>
			</div>
			<% end %>
		</div>
	</div>
	<div class="grid_3">
		<div class="links">
			<ul>
				<% @project.links.each do |link| %>
					<li><%= link_to link.title, link.url %></li>
				<% end%>
			</ul>
			<% if current_user %>
			<div id="image_sorter">
				<h5>Image Order</h5>
				<div id="image_sorter_hide"><a href="#">TOGGLE</a></div>
				<ul id="images" class="admin">
					<% @images.each do |image| %>
						<li id="image_<%= image.id %>" data-id="<%= image.id %>">
							<img src="<%= image.image.thumb.url %>" />
						</li>
					<% end %>
					<div class="clear"></div>
				</ul>
				<strong><%= link_to "Edit Project", edit_project_path(@project) %></strong>
			</div>
			<% end %>
		</div>
	</div>
	<div class="clear"></div>
</div>

<% if current_user %>
<script type="text/javascript" charset="utf-8">
$(function(){
	$("#image_sorter_hide a").click(function(e) {
		$('#images').slideToggle();
		e.preventDefault();
		return false;
	});
	
	$('#images.admin').sortable({
		dropOnEmpty: false,
		items: 'li',
		opacity: '0.5',
		scroll: true,
		placeholder: "image_placeholder",
		update: function(e) {
			$.ajax({
				type: 'post',
				data: $('#images.admin').sortable('serialize'),
				datatype: 'script',
				url: '<%= sort_project_images_path @project %>'
			});
		}
	});
});
</script>
<% end %>
